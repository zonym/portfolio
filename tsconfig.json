{
    "extends": ["@tsconfig/strictest"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "es2023",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}
